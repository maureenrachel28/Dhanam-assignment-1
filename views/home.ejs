<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style> 
        .container .box { 
            width:100%; 
            margin:50px; 
            display:table; 
        } 
        .container .box .box-row { 
            display:table-row; 
        } 
        .container .box .box-cell { 
            display:table-cell; 
            width:33%; 
            padding:10px; 
        } 
        .container .box .box-cell.box1 { 
            background:rosybrown; 
            color:white; 
            text-align:justify; 
        } 
        .container .box .box-cell.box2 { 
            background:rgb(241, 230, 241); 
            text-align:justify 
        } 
        .container .box .box-cell.box3 { 
            background:rosybrown; 
            text-align:justify; 
        }
        thead{
            color: black;

        }
    </style> 
</head>
<body>
    <div class='container'>
    <h1 style="text-align: center;">Holidays</h1>
    
    <!-- <form action="/" method="post">
        <button name='filterButton' value="yesterday"> Yesterday </button>
    </form> -->
    
    <div class='box'>
            <div class='box-row'>
   <div class='box-cell box1 division' id='northern-ireland'>
    
   <table>

    <thead>
    <tr>
        <th>Holidays</th>
        <th>Dates</th>
    </tr>
    </thead>

    <tbody>
        <%northernIrelandEvents.forEach(function(item){%>
            <tr>
                <td><%=item.title%></td>
                <td><%=item.date%></td>
            </tr>
        <%})%>
    </tbody> 
    </table>
    </div> 


    
   <div class='box-cell box2 division' id='england-and-wales'>

   <table>

    <thead>
    <tr>
        <th>Holidays</th>
        <th>Dates</th>
    </tr>
    </thead>

    <tbody>
        <%englandAndWalesEvents.forEach(function(item){%>
            <tr>
                <td><%=item.title%></td>
                <td><%=item.date%></td>
            </tr>
        <%})%>
    </tbody> 
    </table>
    </div> 


    
   <div class='box-cell box3 division' id='scotland'>
   
   <table>

    <thead>
    <tr>
        <th>Holidays</th>
        <th>Dates</th>
    </tr>
    </thead>

    <tbody>
        <%scotlandEvents.forEach(function(item){%>
            <tr>
                <td><%=item.title%></td>
                <td><%=item.date%></td>
            </tr>
        <%})%>
    </tbody> 
    </table>
    </div> 
</div>
</div>
</div>
</body>
</html>